            </Viewport3D>
            <TextBox x:Name="textBox1" Height="24" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="textBox2" Height="24" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        </DockPanel>
        </Grid>
</Window>
